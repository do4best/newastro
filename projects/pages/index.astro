<div class="container">
	<h1>Pass Word Generator</h1>
	<div class="input-box">
		<input type="text" class="passBox" id="passBox" disabled>
		<span class="material-symbols-outlined">
content_copy
</span>
	</div>
	<input type="range" min="10" max="30" value="10" id="inputslider">
	<div class="row">
		<p>Password Length</p>
		<span id="slidervalue">10</span>

	</div>
	<div class="row">
		<label for="lowercase">Include Lowercase Letter (a-z)</label>
		<input type="checkbox" name="lowercase" id="lowercase" checked>
	</div>
	<div class="row">
		<label for="upercase">Include Upercase Letter (A-Z)</label>
		<input type="checkbox" name="upercase"  id="upercase" checked>
	</div>
	<div class="row">
		<label for="number">Include Numbers (0-9)</label>
		<input type="checkbox" name="lowercase" id="number" checked>
		<div class="row">
			<label for="symbol">Include Symbol Characters  (*-$%)</label>
			<input type="checkbox" name="symbol" id="symbol" checked>
		</div>
		<button type="button" class="getbtn" id="getBtn">Generate Password</button>
	</div>

</div>

